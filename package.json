{
	"name": "hotels-menu",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start -H 0.0.0.0 -p ${PORT:-8080}",
		"lint": "next lint",
		"prepare": "husky install",
		"check-types": "tsc --pretty --noEmit",
		"check-format": "prettier --check .",
		"check-lint": "eslint . --ext ts --ext tsx --ext js",
		"format": "prettier --config .prettierrc \"**/*.{css,ts,tsx,html,json}\" --write",
		"test-all": "yarn run check-format && yarn run check-lint && yarn run check-types && yarn run build"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn test-all"
		}
	},
	"dependencies": {
		"clsx": "^1.1.1",
		"next": "11.1.2",
		"next-react-svg": "1.1.3",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"react-scroll": "^1.8.4"
	},
	"devDependencies": {
		"@types/node": "^16.11.1",
		"@types/react": "^17.0.30",
		"@types/react-scroll": "^1.8.3",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.0.1",
		"eslint-config-next": "11.1.2",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.26.1",
		"husky": "^7.0.0",
		"prettier": "^2.4.1",
		"pretty-quick": "^3.1.1",
		"typescript": "^4.4.4"
	}
}
